<%- include("./partials/head") %>

<h3 id="headings">Watch Lists</h3>
<main>
    <div class="role" id="director">
        <span>Directing</span>
    </div>
    <div class="role" id="editor">
        <span>Editing</span>
    </div>
    <div class="role" id="cinematographer">
        <span>Cinematography</span>
    </div>
    <div class="role" id="writer">
        <span>Writing</span>
    </div>
    <div class="role" id="composer">
        <span>Composing</span>
    </div>

    <div class="flex">
        <% for(i of lists) { %> 
            <% if(i.category === "director" && i.films.length) { %> 
            <div class="names dname">
                <span><%= i.name %></span>
                <div class="films">
                    <% for(let j of i.films) { %>
                        <span><%= j.title %> (<%= j.releasedate%>) &nbsp;
                            <form method="POST" id="form" action="/delete/<%=j.id%>">
                                <button id="delete" type="submit"></button>
                            </form></span><br> 
                        <span class="always-hidden"><%= j %></span>
                    <% } %>  
                </div>
            </div>
            <% } %>
        <% } %>

        <% for(i of lists) { %> 
            <% if(i.category === "editor" && i.films.length) { %>  
            <div class="names ename">
                <span><%= i.name %></span>
                <div class="films">
                    <% for(let j of i.films) { %>
                        <span><%= j.title %> (<%= j.releasedate%>)&nbsp;
                            <form method="POST" id="form" action="/delete/<%=j.id%>">
                                <button id="delete" type="submit"></button>
                            </form></span><br>
                        <span class="always-hidden"><%= j %></span>
                    <% } %>
                </div>
            </div>                    
            <% } %>
        <% } %>
        
        <% for(i of lists) { %> 
            <% if(i.category === "cinematographer" && i.films.length) { %>
            <div class="names cname">
                <span><%= i.name %></span>
                <div class="films">
                    <% for(let j of i.films) { %>
                        <span><%= j.title %> (<%= j.releasedate%>)&nbsp;
                            <form method="POST" id="form" action="/delete/<%=j.id%>">
                                <button id="delete" type="submit"></button>
                            </form></span><br>
                        <span class="always-hidden"><%= j %></span>
                    <% } %>
                </div>
            </div>
            <% } %>
        <% } %>
       
        <% for(i of lists) { %> 
            <% if(i.category === "writer" && i.films.length) { %>
            <div class="names wname">
                <span><%= i.name %></span>
                <div class="films">
                    <% for(let j of i.films) { %>
                        <span><%= j.title %> (<%= j.releasedate%>)&nbsp;
                            <form method="POST" id="form" action="/delete/<%=j.id%>">
                                <button id="delete" type="submit"></button>
                            </form></span><br>
                        <span class="always-hidden"><%= j %></span>
                    <% } %>
                </div>
            </div>
            <% } %>
        <% } %>
        
        <% for(i of lists) { %> 
            <% if(i.category === "composer" && i.films.length) { %>
            <div class="names coname">
                <span><%= i.name %></span>
                <div class="films">
                    <% for(let j of i.films) { %>
                        <span><%= j.title %> (<%= j.releasedate%>)&nbsp;
                            <form method="POST" id="form" action="/delete/<%=j.id%>">
                                <button id="delete" type="submit"></button>
                            </form></span><br>
                        <span class="always-hidden"><%= j %></span>
                    <% } %>
                </div>
            </div>
            <% } %>
        <% } %>
    </div>
    <div id="film-details">
        <div class="film-details-box-one"></div>
        <div class="film-details-box-two"></div>
        <div class="film-details-box-three"></div>
        <div class="film-details-box-four"></div>
    </div> 
    
</main>
<script src="/javascripts/scripts.js"></script>
</body>
</html>